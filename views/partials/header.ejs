<% if (errors && errors.length) {
  errors.forEach((err) => { %>
    <div class="alert alert-danger">Error: <%= err %></div>
<% }) } %>
<% if (info && info.length) {
  info.forEach((msg) => { %>
    <div class="alert alert-success">Info: <%= msg %></div>
<% }) } %>
<% if ((errors && errors.length) || (info && info.length)) { %>
    <hr />
<% } %>