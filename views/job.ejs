<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2 class="text-center"><%= job ? 'Edit Job' : 'Add New Job' %></h2>
      <form action="<%= job ? '/job/update/' + job.id : '/job' %>" method="POST" class="mt-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />  

        <div class="mb-3">
          <label for="company" class="form-label">Company:</label>
          <input type="text" id="company" name="company" class="form-control" value="<%= job ? job.company : '' %>" required>
        </div>
        
        <div class="mb-3">
          <label for="position" class="form-label">Position:</label>
          <input type="text" id="position" name="position" class="form-control" value="<%= job ? job.position : '' %>" required>
        </div>
        
        <div class="mb-3">
          <label for="status" class="form-label">Status:</label>
          <input type="text" id="status" name="status" class="form-control" value="<%= job ? job.status : '' %>" required>
        </div>
          
        <input type="submit" value="<%= job ? 'Update' : 'Add' %>" class="btn" style="background-color: rgb(34, 82, 34); color: white;">
      </form>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>