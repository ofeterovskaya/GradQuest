<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>
<%- include("partials/navbar.ejs") %>
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2 class="text-center"><%= school ? 'Edit School' : 'Add New School' %></h2>
      <form action="<%= school ? '/schools/update/' + school.id : '/schools' %>" method="POST" class="mt-3">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <!-- School Information Section -->
        <div class="mb-1">
          <label for="schoolName" class="form-label">School Name:</label>
            <input type="text" 
                 id="schoolName" 
                 name="schoolName" 
                 class="form-control" 
                 value="<%= school ? school.schoolName : '' %>" required
            >
        </div>
        <div class="row">
          <!-- First Column -->
          <div class="col-md-6 mb-1">
            <label for="satActScore" class="form-label">SAT/ACT Score:</label>
            <input type="text" 
                 id="satActScore" 
                 name="satActScore" 
                 class="form-control" 
                 value="<%= school && school.testScores ? (school.testScores.SAT 
                 ? school.testScores.SAT : (school.testScores.ACT ? school.testScores.ACT : '')) : '' %>" required
            >
            <label for="volunteering" class="form-label">Volunteering:</label>
            <input type="text" 
                 id="volunteering" 
                 name="volunteering" 
                 class="form-control" 
                 value="<%= school ? school.volunteering : '' %>" required
            >
            <label for="clubs" class="form-label">Clubs:</label>
            <input type="text" 
                 id="clubs" 
                 name="clubs" 
                 class="form-control" 
                 value="<%= school ? school.clubs : '' %>" required
            >
          </div>
          <!-- Second Column -->
          <div class="col-md-6 mb-1">
            <label for="gpaScore" class="form-label">GPA Score:</label>
            <input type="text" 
                 id="gpaScore" 
                 name="GPA" 
                 class="form-control" 
                 value="<%= school ? school.gpa : '' %>" required
            >
            <label for="awards" class="form-label">Awards:</label>
            <input type="text" 
                 id="awards" 
                 name="awards" 
                 class="form-control" 
                 value="<%= school ? school.awards : '' %>" required
            >
            <label for="sport" class="form-label">Sport:</label>
            <input type="text" 
                 id="sport" 
                 name="sport" 
                 class="form-control" 
                 value="<%= school ? school.sport : '' %>" required
            >
          </div>
        </div>
        <div class="d-flex justify-content-center mt-3">
          <input type="submit" 
                 value="<%= school ? 'Update School' : 'Add School' %>" 
                 class="btn" 
                 style="background-color: rgb(34, 82, 34); color: white;"
          >
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("partials/footer.ejs") %>